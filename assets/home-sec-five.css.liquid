.home-sec5 {
    margin-top: 40px;  
}
.home-sec5 .home-sec-five.container {
    display: flex;
  max-width:1080px;
  padding:0 15px; 
  margin:0 auto;
}
.home-sec5 .home-sec-five.container .sectFive-content,.home-sec5 .home-sec-five.container .sectFive-img {
    max-width: 50%;
    flex: 0 0 50%;
    
}
.home-sec5 .home-sec-five.container .sectFive-content
{
     background-color: #e60060;
    position: relative;
    display: flex;
    justify-content: end;
    align-items: center;
    padding-bottom: 37px;
}
.home-sec5 .home-sec-five.container .sectFive-img img {
    height: 100%;
      width: 100%;
}
.home-sec5 .sectFive-content-inner {
        padding-left: 20px;
    padding-right: 20px;
    max-width: 100%;
    padding-top: 50px;
    margin: 0 auto;
}
.home-sec5 .sectFive-content-inner h3.head-five-sect {
    font-size: 45px;
    font-weight: 800;
    line-height: 60px;
    letter-spacing: 0em;
    text-align: left;
    color: #fff;
    text-transform: uppercase;
    margin-bottom: 7px;
      margin-top: 0;

}
.home-sec5 .sectFive-content-inner p.para-five-sect {
    font-size: 18px;
    font-weight: 400;
    line-height: 30px;
    letter-spacing: 0em;
    text-align: left;
    color: #fff;
}
@media only screen and (max-width: 1199px)
{
  .home-sec5 .sectFive-content-inner {
    padding-left: 30px;
    padding-right: 30px;
}
  .home-sec5 .sectFive-content-inner h3.head-five-sect {
    font-size: 44px;
    line-height: 65px;
        margin-top: 0;
    
}
  .home-sec5 .sectFive-content-inner p.para-five-sect {
    font-size: 16px;
    line-height: 35px;
    
}
}

@media only screen and (max-width: 1024px)
{
 .home-sec5 .home-sec-five.container {
    display: flex;
    flex-direction: column-reverse;
}
  .home-sec5 .home-sec-five.container .sectFive-content, .home-sec5 .home-sec-five.container .sectFive-img {
    max-width: 100%;
    flex: 0 0 100%;
}
  .home-sec5 .home-sec-five.container .sectFive-img img {
    height: 100%;
    width: 100%;
 display: block;
}
  .home-sec5 .home-sec-five.container .sectFive-content {
    align-items: center;
    padding-bottom: 50px;
}
  .home-sec5 .sectFive-content-inner {
    width: 100%;
    max-width: 100%;

}
  .home-sec5 .sectFive-content-inner p.para-five-sect,.home-sec5 .sectFive-content-inner h3.head-five-sect  {
    text-align: center;
}
 
}

@media only screen and (max-width: 768px)
{
  .home-sec5 {
    margin-top: 50px;
}
  
}


@media only screen and (max-width: 600px)
{
  .home-sec5 .sectFive-content-inner h3.head-five-sect{font-size: 39px;line-height: 57px;margin-top: 0;}
}

@media only screen and (max-width: 480px)
{
  .home-sec5 .sectFive-content-inner h3.head-five-sect {
    font-size: 29px;
    line-height: 40px;
    
}
  .home-sec5 .home-sec-five.container .sectFive-content {
    padding-bottom: 40px;
}
  
}


