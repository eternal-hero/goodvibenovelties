.home-sec-2-inner {
 background-color: #fff;
    max-width: 1080px; 
    padding: 0 15px;
    margin: 0 auto;
}

.home-sec-2-inner .collection-list-wrapper {
    max-width: 100%;
    padding: 0;
}

.home-sec-2-inner .title-wrapper-with-link {
    align-items: flex-start;
    justify-content: left;
    border-bottom: 2px solid #ececec;
}
.home-sec-2-inner .collection-list-wrapper h2 {
       font-size: 20px;
    font-weight: 800;
    line-height: 1.1;
    letter-spacing: 0em;
    text-align: left;
    color: #000;
    padding-top: 20px;
    padding-bottom: 15px;
}

.home-sec2 .collection-card-wrapper .card {
  border: none !important;
  border-radius:0;
  background-color:#fff;
}

.home-sec2 .card__inner.ratio .card__media {
  background-color: #f8f8f8;
  margin: 0;
  padding: 0;
  width: 100%;
}

.home-sec2 .card__inner.ratio .card__content {
 
  padding: 0;
}
.home-sec2 .card__inner.ratio .card__media .media,.home-sec2 .card__inner.ratio .card__media .media img {
  position: relative;
  height: 100%;
}
 
 

.home-sec2 .card__inner.ratio {
 height: 250px;
}
.home-sec2 .card__content {
  padding: 0;
  text-align: center;
}

.home-sec2 .card__content .card__information {
 
  padding-left: 0;
  padding-right: 0;
}
.home-sec2 .card__content .card__information .card__heading {
  background: #E60060;
}

.home-sec2 .card__content .card__information .card__heading a {
  font-family: Lato;
  font-size: 17px;
  font-weight: 700;
  line-height: 40px;
  letter-spacing: 0em;
  text-align: center;
  color: #fff;
  text-transform: uppercase;
  
}

.home-sec2 .collection-list {
    column-gap: 20px;
   display: grid;
    grid-template-columns: repeat(4, 1fr);
}
.home-sec2 .collection-list li {
    width: 100%;
    max-width: 100%;
      margin-bottom: 20px;   
}

.home-sec2 .collection-list .collection-list__item.grid__item .coll-desc {
  font-family: Lato;
  font-size: 14px;
  font-weight: 700;
  line-height: 28px;
  letter-spacing: 0em;
  text-align: center;
  color: #000;
  max-width: 333px;
  margin: 0 auto;
  padding-top: 20px;
      z-index: 1;
    position: relative;
}

.home-sec2 .collection-list .collection-list__item.grid__item .coll-desc a
{
   font-family: Lato;
  font-size: 14px;
  font-weight: 700;
  line-height: 28px;
  letter-spacing: 0em;
  text-align: center;
  color: #000;
  text-decoration:none;
  
}
.home-sec2 .collection-list .collection-list__item.grid__item .coll-desc a:hover
{
  color:#E60060;
}

@media only screen and (max-width: 1199px)
{
  .home-sec2 .card__content .card__information .card__heading a {
    font-size: 17px;
}

}

@media only screen and (max-width: 989px)
{
 
  .home-sec2 .collection-card-wrapper .card {

    margin-bottom: 20px;
}
.home-sec2 .collection-list {
    grid-template-columns: repeat(2,1fr);
}
.home-sec2 .card__inner.ratio {
    height: 440px;
}
  .home-sec2 .collection-list li {
    margin-bottom: 0;
}
  
}
@media only screen and (max-width: 768px)
{
  .home-sec-2-inner .title-wrapper-with-link {
    padding-left: 0;
    padding-right: 0;
}
.home-sec-2-inner slider-component.slider-mobile-gutter ul.collection-list {
    padding: 0;
}
  
}


@media only screen and (max-width: 600px)
{
  .home-sec-2-inner ul.collection-list li.collection-list__item.grid__item {
    width: 100%;
    max-width: 100%;
}
  .home-sec2 .card__inner.ratio {
    height: auto;
}
.home-sec2 .collection-list {
    grid-template-columns: repeat(1,1fr);
      padding-left: 0 !important;
    padding-right: 0 !important;
} 
  
}





