.home-sec8 {
    clear: both;
    background: #26016B;
}
.home-sec8 .home-sec-eight.container {
    max-width: 1080px;
    margin: 0 auto;
    padding: 0 15px;
}
.home-sec8 .home-sec-eight.container .inner-eight--logos {
    flex: 0 0 100%;
    max-width: 100%;
    display: flex;
      justify-content: space-between;
    align-items: baseline;
  text-align: center;
      padding: 50px 0;    
}
.home-sec8 .inner-eight--logos .inner-logo-text p.logo--text {
   font-size: 23px;
    font-weight: 700;
    line-height: 34px;
    letter-spacing: 0em;
       margin: 15px 0 0 0;   
    color: #fff;
}

@media only screen and (max-width: 1199px)
{

  .home-sec8 .inner-eight--logos .inner-logo-text p.logo--text {
    font-size: 20px;
    padding: 0 15px;
}
  
}


@media only screen and (max-width:768px)
{
  .home-sec8 .home-sec-eight.container .inner-eight--logos {
  
    flex-direction: column;
    align-items: center;
        padding-bottom: 20px;
}
.home-sec8 .home-sec-eight.container .inner-eight--logos .inner-logo-text {
    margin-bottom: 30px;
}
.home-sec8 .inner-eight--logos .inner-logo-text p.logo--text {
 
    margin-top: 0;
}
  
}

